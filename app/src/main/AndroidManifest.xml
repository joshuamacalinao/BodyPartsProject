<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.juswa.bodyparts">

    <application
        android:allowBackup="false"
        android:allowClearUserData="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:roundIcon="@drawable/icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.BodyParts"
        tools:targetApi="31">
        <activity
            android:name="com.juswa.bodyparts.Speak"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.TapAnswer"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.Identify"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.Quiz"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.Bodyparts"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.HomePage"
            android:exported="false" />
        <activity
            android:name="com.juswa.bodyparts.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>